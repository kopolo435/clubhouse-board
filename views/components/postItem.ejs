<% if (locals.currentUser && locals.currentUser.is_member) { %>
 <li class="postItem">
    <a href="<%= post.url %>">
        <h2><%= post.title %></h2>
        <p><%= post.user.username %></p>
        <p><%= post.formatted_date %></p>
        <p><%= post.content %></p>
        <p><%= post.numComments %></p>
    </a>
    <div class="points">
        <button type="button" class="upvotePost" data-postid="<%= post.id %>">Like</button>
        <p><%= post.points %></p>
        <button type="button" class="downvotePost" data-postid="<%= post.id %>">Liken't</button>
    </div>
    <% if (dashboard &&locals.currentUser.is_admin) { %>
        <button class="deletePost" data-id="<%= post.id %>">Borrar post</button>
    <% } %>
</li>
<% }else{ %>
    <li class="postItem">
        <a href="<%= post.url %>">
            <h2><%= post.title %></h2>
            <p><%= post.content %></p>
        </a>
    </li>
<% } %>