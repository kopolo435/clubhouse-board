<div class="headerContainer">
    <header>
        <a href="/" class="homeLink">
            <img src="/images/assets/logoTransparent.png" height="50px" width="auto" alt="">
            <span>Clubhouse-board</span>
        </a>
        <div class="accountOptions">
            <% if (locals.currentUser) { %>
                <a class="userInfo" href="<%= locals.currentUser.url %>">
                    <div class="profileImg">
                        <img src="<%= locals.currentUser.img_url%>" alt="">
                    </div>
                    <p><%= locals.currentUser.username %></p>
                </a>
            <% }else{ %>
                <a href="/account/sign-up" class="primaryBtn sign-upBtn">Registrarse</a>
                <a href="/account/sign-in" class="primaryBtn sign-in">Iniciar sesion</a>
            <% } %>
        </div>
    </header>
</div>