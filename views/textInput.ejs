<% if (typeof error === "undefined") { %>
<div class="textInputContainer">
  <label class="textLabel" for="<%= name %>">
    <%= label %> 
    <input 
    type="<%= type %>" 
    class="textInput" 
    id="<%= name %>" 
    name="<%= name %>"
    placeholder="<%= placeholder %>" 
    required value="<%= !value ? "" : value  %>" />
  </label>
</div>
<% }else{ %>
<div class="textInputContainer invalid">
  <label class="textLabel" for="<%= name %>">
    <%= label %> 
    <input 
    type="<%= type %>"
    class="textInput" 
    id="<%= name %>" 
    name="<%= name %>"
    placeholder="<%= placeholder %>" 
    required value="<%= !value ? "" : value  %>" />
  </label>
  <p class="errorText"><%= error.msg %></p>
</div>
<% } %>
