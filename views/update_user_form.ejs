<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("head_layout",{title:"Actualizar datos"}) %>
</head>
<body>
    <h1>Actualizar datos</h1>
    <form action="" method="post" enctype="multipart/form-data">

        <div class="profileImgInput">
            <label for="img">
                Imagen de perfil
                <input type="file" name="img" id="img">
            </label>
        </div>

        <%- include("textInput", {type:"text", label:"Nombre", name:"first_name",
        error:errors.first_name, value:user.first_name, placeholder:"Nombre"}) %>
  
        <%-include("textInput", {type:"text", label:"Apellido", name:"last_name",
        error:errors.last_name, value:user.last_name, placeholder:"Apellido"}) %>
  
        <%-include("textInput", {type:"email", label:"Correo", name:"email",
        error:errors.email, value:user.email, placeholder:"correo@gmail.com"}) %>
  
        <%-include("textInput", {type:"text", label:"Nombre de usuario",
        name:"username", error:errors.username, value:user.username,
        placeholder:"manzanita123"}) %> 
      <button type="submit">Actualizar datos</button>
      </form>
</body>
</html>